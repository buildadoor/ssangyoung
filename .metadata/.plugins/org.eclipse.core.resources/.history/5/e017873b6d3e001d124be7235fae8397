package javaexp.z01_project;

import java.util.Scanner;

public class A02_ProductPage {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("하얼빈 상세페이지");
		Scanner price = new Scanner(System.in);
		System.out.print("정가 입력:");
		int ogPrice = price.nextInt();
		int bookPrice = ogPrice-(ogPrice*10/100);
		Scanner number = new Scanner(System.in);
		System.out.print("ISBN 입력:");
		int isbn = number.nextInt();
		Scanner page = new Scanner(System.in);
		System.out.print("쪽수 입력:");
		int bookPage = page.nextInt();
		Scanner size = new Scanner(System.in);
		System.out.print("크기 입력:");
		String bookSize = page.nextLine();
		Scanner introduction = new Scanner(System.in);
		System.out.print("책소개 입력:");
		String intro = introduction.nextLine();
		
		//출력창 
		System.out.print("정가:"+ogPrice+"원\n");
		System.out.print("판매가:"+bookPrice+"원\n");
		System.out.print("ISBN:"+number+"\n");
		System.out.print("쪽수:"+bookPage+"쪽\n");
		System.out.print("크기:"+bookSize+"\n");
		System.out.print("책소개\n"+intro);
	}

}
